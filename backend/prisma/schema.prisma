generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pendaftar {
  id        Int      @id @default(autoincrement())
  nama      String
  email     String   @unique
  ttl       String
  fakultas  String
  prodi     String

  nik       String?
  nim       String?
  namaIbu   String?
  alamat    String?

  status    String   @default("pending")

  ktp                String?
  akta               String?
  kk                 String?
  buktiPelunasan     String?
  skripsi            String?
  suratBebasPustaka  String?
  artikelJurnal      String?

  createdAt DateTime @default(now())
}
